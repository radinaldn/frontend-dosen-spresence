<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_foto"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Nazruddin Safaat"
                android:id="@+id/tv_nama_dosen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_nip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="130517100"
                />

            <TextView
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/textColorWhite"
                android:text="Hadir"
                android:id="@+id/tv_status_kehadiran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center"

                android:visibility="gone"
                android:id="@+id/tv_nama_kota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Kota" />


            <TextView
                android:layout_gravity="end"
                android:id="@+id/tv_last_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Menit Lalu" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>