<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_idmengajar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:text="001" />

            <TextView
                android:id="@+id/tv_matakuliah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Dasar Pemrograman" />

            <!-- TextView Npm Mahasiswa -->
            <TextView
                android:id="@+id/tv_kelas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="A" />

            <!-- TextView NoHp Mahasiswa -->
            <TextView
                android:id="@+id/tv_sks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="3 SKS" />

            <TextView
                android:id="@+id/tv_waktu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="07:00:00" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_mulai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.39"

                    android:background="@color/colorPrimaryDark"
                    android:drawableLeft="@drawable/ic_check_circle_white"
                    android:paddingLeft="5dp"
                    android:text="@string/mulai"
                    android:textColor="@color/textColorWhite" />


                <Button
                    android:id="@+id/bt_histori"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.39"
                    android:background="@color/colorAccent"
                    android:drawableLeft="@drawable/ic_history_black_24dp"
                    android:paddingLeft="5dp"
                    android:text="@string/histori"
                    android:textColor="@color/textColorWhite" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>