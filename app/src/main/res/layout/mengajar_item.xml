<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="5dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp">

        <!-- TextView Nama Mahasiwa -->
        <TextView
            android:visibility="gone"
            android:text="001"
            android:id="@+id/tv_idmengajar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- TextView Nama Mahasiwa -->
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Dasar Pemrograman"
            android:id="@+id/tv_matakuliah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- TextView Npm Mahasiswa -->
        <TextView
            android:text="A"
            android:id="@+id/tv_kelas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- TextView NoHp Mahasiswa -->
        <TextView
            android:text="3 SKS"
            android:id="@+id/tv_sks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="07:00:00"
            android:id="@+id/tv_waktu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end">

            <Button

                android:paddingLeft="5dp"
                android:id="@+id/bt_mulai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@android:color/darker_gray"
                android:drawableLeft="@drawable/ic_check_circle_white"
                android:text="@string/mulai"
                android:textColor="@color/textColorWhite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" " />

            <Button
                android:paddingLeft="5dp"
                android:id="@+id/bt_histori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/colorAccent"
                android:drawableLeft="@drawable/ic_history_black_24dp"
                android:text=" Histori"
                android:textColor="@color/textColorWhite" />

        </LinearLayout>

    </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>